@model Project113_G3.Models.UserData

@{ Layout = null; }

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mitr">
    <link rel="stylesheet" type="text/css" href="~/Content/css/Dashboard_css.css">

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <title>หลังบ้าน</title>
</head>
<body>

    <input type="checkbox" id="check" />
    <label for="check">
        <i class="fa fa-bars" id="okbuttom">
            <ion-icon name="menu-outline"></ion-icon>
        </i>

        <i class="fa fa-time" id="cancelbuttom">
            <ion-icon name="close-outline"></ion-icon>
        </i>

    </label>

    <div class="navigation">
        <ul>
            <content>FPTP</content>

            <li>
                <a href="~/Dashboard/Index">
                    <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                    <span class="title">Home</span>
                </a>
            </li>

            <li>
                <a href="~/UserDatas/Index">
                    <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                    <span class="title">Account</span>
                </a>
            </li>

            <li>
                <a href="~/RQ_Reported/Index">
                    <span class="icon"><ion-icon name="reader-outline"></ion-icon></span>
                    <span class="title">Reported</span>
                </a>
            </li>

            <li>
                <a href="~/DataGames/Index">
                    <span class="icon"><ion-icon name="game-controller-outline"></ion-icon></span>
                    <span class="title">System Information</span>
                </a>
            </li>


            <li>
                <a href="~/RequestGameDatas/Index">
                    <span class="icon"><ion-icon name="git-pull-request-outline"></ion-icon></span>
                    <span class="title">Request</span>
                </a>
            </li>

            <li>
                <a href="~/Notification_Admin/Index">
                    <span class="icon"><ion-icon name="notifications-outline"></ion-icon></span>
                    <span class="title">Notification</span>
                </a>
            </li>

            <li>
                @Html.Partial("_LoginPartial")
            </li>
        </ul>
    </div>

    <!--ที่ปิดเมนู / ช่องค้นหา / โปรไฟล์ Admin-->
    <div class="main">
        <div class="topbar">
            <div class="Namepage">
                <h3>Account User</h3>
            </div>



            <div class="accountPic">
                <img src="~/Content/images/SH2.jpg" />
            </div>
        </div>


        <!-- กรอบข้อมูลกราฟ-->
        <div class="details">
            <div class="graph">
                <div class="cardHeader" name="cardGraph">

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>UserData</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Email_User)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email_User)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Bd_User)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Bd_User)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.GenderUser)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.GenderUser)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.url)
                            </dt>

                            <dd>
                                <img src=@Url.Content("~/Content/images/" +(Model.url)) style="width:100px ; height:auto" />
                                @Html.DisplayFor(model => model.url)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.JoinDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.JoinDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Email_User)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email_User)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-default" /> |
                                    @Html.ActionLink("Back to List", "Index")
                                </div>}
                    </div>

                </div>
            </div>

        </div>

        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>